<% Current.meta_tags.set(title: "Dashboard") %>

<div class="container mx-auto px-4">
  <div class="mb-8 flex items-center justify-between">
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Dashboard</h1>
      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
        <%= current_organization.name %>
      </p>
    </div>
    <div class="year-indicator text-sm text-gray-500 dark:text-gray-400">
      <%= @year %>
    </div>
  </div>

  <%# Stats Panels %>
  <div class="grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-4 mb-8">
    <%# Clients %>
    <div class="stats-panel bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg border border-gray-200 dark:border-gray-700">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Clients</dt>
              <dd class="text-lg font-semibold text-gray-900 dark:text-white"><%= @stats[:clients_count] %></dd>
            </dl>
          </div>
        </div>
      </div>
      <% if @stats[:clients_count] == 0 %>
        <div class="empty-state bg-gray-50 dark:bg-gray-700 px-5 py-3">
          <p class="text-sm text-gray-500 dark:text-gray-400">Add your first client to get started</p>
        </div>
      <% end %>
    </div>

    <%# Transactions %>
    <div class="stats-panel bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg border border-gray-200 dark:border-gray-700">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">Transactions (<%= @year %>)</dt>
              <dd class="text-lg font-semibold text-gray-900 dark:text-white"><%= @stats[:transactions_count] %></dd>
            </dl>
          </div>
        </div>
      </div>
      <% if @stats[:transactions_count] == 0 %>
        <div class="empty-state bg-gray-50 dark:bg-gray-700 px-5 py-3">
          <p class="text-sm text-gray-500 dark:text-gray-400">No transactions yet</p>
        </div>
      <% else %>
        <div class="bg-gray-50 dark:bg-gray-700 px-5 py-3">
          <p class="text-sm text-gray-500 dark:text-gray-400">Total value: <%= number_to_currency(@stats[:transactions_value], unit: "€", format: "%u%n") %></p>
        </div>
      <% end %>
    </div>

    <%# STR Reports %>
    <div class="stats-panel bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg border border-gray-200 dark:border-gray-700">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">STRs Filed (<%= @year %>)</dt>
              <dd class="text-lg font-semibold text-gray-900 dark:text-white"><%= @stats[:strs_count] %></dd>
            </dl>
          </div>
        </div>
      </div>
    </div>

    <%# Submission Status %>
    <div class="submission-status bg-white dark:bg-gray-800 overflow-hidden shadow rounded-lg border border-gray-200 dark:border-gray-700">
      <div class="p-5">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <svg class="h-6 w-6 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <div class="ml-5 w-0 flex-1">
            <dl>
              <dt class="text-sm font-medium text-gray-500 dark:text-gray-400 truncate">AMSF Submission</dt>
              <dd class="text-lg font-semibold text-gray-900 dark:text-white">
                <% case @submission_status[:status] %>
                <% when :not_started %>
                  Not started
                <% when :draft %>
                  In progress
                <% when :validated %>
                  Validated
                <% when :completed %>
                  Completed
                <% end %>
              </dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="submission-cta bg-gray-50 dark:bg-gray-700 px-5 py-3">
        <% if @submission_status[:status] == :not_started %>
          <%= link_to "Start #{@year} Submission", "#", class: "text-sm font-medium text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300" %>
        <% elsif @submission_status[:status] == :draft %>
          <%= link_to "Continue Submission", "#", class: "text-sm font-medium text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300" %>
        <% else %>
          <%= link_to "View Submission", "#", class: "text-sm font-medium text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300" %>
        <% end %>
      </div>
    </div>
  </div>

  <%# Quick Actions %>
  <div class="mb-8 flex space-x-4">
    <%= link_to new_client_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:focus:ring-offset-gray-900" do %>
      <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
      </svg>
      Add Client
    <% end %>

    <%= link_to new_transaction_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 dark:border-gray-600 text-sm font-medium rounded-md shadow-sm text-gray-700 dark:text-gray-200 bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:focus:ring-offset-gray-900" do %>
      <svg class="-ml-1 mr-2 h-5 w-5 text-gray-500 dark:text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
      </svg>
      Add Transaction
    <% end %>
  </div>

  <%# Recent Transactions %>
  <div class="recent-transactions bg-white dark:bg-gray-800 shadow rounded-lg border border-gray-200 dark:border-gray-700">
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200 dark:border-gray-700 flex items-center justify-between">
      <h3 class="text-lg leading-6 font-medium text-gray-900 dark:text-white">Recent Transactions</h3>
      <% if @recent_transactions.any? %>
        <%= link_to transactions_path, class: "text-sm font-medium text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300" do %>
          View all
          <span aria-hidden="true"> &rarr;</span>
        <% end %>
      <% end %>
    </div>
    <% if @recent_transactions.any? %>
      <ul class="divide-y divide-gray-200 dark:divide-gray-700 list-none">
        <% @recent_transactions.each do |transaction| %>
          <%= link_to transaction_path(transaction), class: "block" do %>
            <li class="px-4 py-4 sm:px-6 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors duration-150">
              <div class="flex items-center justify-between">
                <div class="flex items-center min-w-0 flex-1">
                  <%# Transaction type indicator %>
                  <div class="flex-shrink-0">
                    <% case transaction.transaction_type %>
                    <% when "PURCHASE" %>
                      <span class="inline-flex items-center justify-center h-10 w-10 rounded-full bg-emerald-100 dark:bg-emerald-900/30">
                        <svg class="h-5 w-5 text-emerald-600 dark:text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                        </svg>
                      </span>
                    <% when "SALE" %>
                      <span class="inline-flex items-center justify-center h-10 w-10 rounded-full bg-blue-100 dark:bg-blue-900/30">
                        <svg class="h-5 w-5 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                      </span>
                    <% when "RENTAL" %>
                      <span class="inline-flex items-center justify-center h-10 w-10 rounded-full bg-amber-100 dark:bg-amber-900/30">
                        <svg class="h-5 w-5 text-amber-600 dark:text-amber-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                        </svg>
                      </span>
                    <% end %>
                  </div>
                  <div class="ml-4 min-w-0 flex-1">
                    <div class="flex items-center gap-2">
                      <p class="text-sm font-medium text-gray-900 dark:text-white truncate"><%= transaction.client&.name || "Unknown Client" %></p>
                      <%# Transaction type badge %>
                      <% badge_classes = case transaction.transaction_type
                        when "PURCHASE" then "bg-emerald-100 text-emerald-700 dark:bg-emerald-900/30 dark:text-emerald-400"
                        when "SALE" then "bg-blue-100 text-blue-700 dark:bg-blue-900/30 dark:text-blue-400"
                        when "RENTAL" then "bg-amber-100 text-amber-700 dark:bg-amber-900/30 dark:text-amber-400"
                        else "bg-gray-100 text-gray-700 dark:bg-gray-700 dark:text-gray-300"
                      end %>
                      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium <%= badge_classes %>">
                        <%= transaction.transaction_type_label %>
                      </span>
                    </div>
                    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                      <%= transaction.transaction_date.strftime("%b %d, %Y") %>
                      <% if transaction.reference.present? %>
                        <span class="mx-1.5 text-gray-300 dark:text-gray-600">&middot;</span>
                        <span class="text-gray-400 dark:text-gray-500"><%= transaction.reference %></span>
                      <% end %>
                    </p>
                  </div>
                </div>
                <div class="ml-4 flex-shrink-0 text-right">
                  <p class="text-sm font-semibold text-gray-900 dark:text-white"><%= number_to_currency(transaction.transaction_value, unit: "€", format: "%u%n") %></p>
                  <% if transaction.has_cash? %>
                    <p class="mt-0.5 text-xs text-amber-600 dark:text-amber-400 flex items-center justify-end gap-1">
                      <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd" />
                      </svg>
                      Cash
                    </p>
                  <% end %>
                </div>
              </div>
            </li>
          <% end %>
        <% end %>
      </ul>
    <% else %>
      <div class="empty-state px-4 py-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-white">No transactions yet</h3>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Get started by adding your first transaction.</p>
        <div class="mt-6">
          <%= link_to "Add Transaction", new_transaction_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 dark:focus:ring-offset-gray-900" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
