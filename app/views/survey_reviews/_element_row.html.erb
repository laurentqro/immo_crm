<%# Element row partial for survey review page %>
<%# locals: element (Xbrl::ElementManifest::ElementValue) %>

<tr class="<%= 'bg-yellow-50 dark:bg-yellow-900/20' if element.needs_review? %>"
    data-survey-filter-target="element"
    data-element-name="<%= element.name %>"
    data-element-label="<%= element.label_text&.downcase %>"
    data-needs-review="<%= element.needs_review? %>">
  <%# Element code/name %>
  <td class="px-6 py-4 whitespace-nowrap">
    <span class="text-sm font-mono text-gray-900 dark:text-gray-100"><%= element.name %></span>
    <% if element.needs_review? %>
      <span class="ml-2 inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-yellow-100 dark:bg-yellow-900/50 text-yellow-800 dark:text-yellow-300">
        Review
      </span>
    <% end %>
  </td>

  <%# Element label from taxonomy %>
  <td class="px-6 py-4">
    <div class="text-sm text-gray-900 dark:text-gray-100"><%= element.label_text || element.name %></div>
    <% if element.verbose_label_text.present? && element.verbose_label_text != element.label_text %>
      <div class="text-xs text-gray-500 dark:text-gray-400 mt-1"><%= truncate(element.verbose_label_text, length: 100) %></div>
    <% end %>
  </td>

  <%# Value with type-appropriate formatting %>
  <td class="px-6 py-4 <%= 'whitespace-nowrap' unless element.dimensional? %>">
    <% if element.present? %>
      <% if element.dimensional? %>
        <%# Dimensional elements show country breakdown %>
        <div class="flex flex-wrap gap-1">
          <% element.dimensional_breakdown.sort_by { |_, v| -v }.each do |country, count| %>
            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-indigo-100 dark:bg-indigo-900/50 text-indigo-800 dark:text-indigo-300">
              <%= country %>: <%= count %>
            </span>
          <% end %>
        </div>
      <% elsif element.boolean? %>
        <% if element.value == "true" %>
          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-green-100 dark:bg-green-900/50 text-green-800 dark:text-green-300">Yes</span>
        <% elsif element.value == "false" %>
          <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300">No</span>
        <% else %>
          <span class="text-sm text-gray-900 dark:text-gray-100"><%= element.value %></span>
        <% end %>
      <% elsif element.monetary? %>
        <span class="text-sm font-mono text-gray-900 dark:text-gray-100"><%= number_with_delimiter(element.value) %> EUR</span>
      <% elsif element.integer? %>
        <span class="text-sm font-mono text-gray-900 dark:text-gray-100"><%= number_with_delimiter(element.value) %></span>
      <% else %>
        <span class="text-sm text-gray-900 dark:text-gray-100"><%= element.value %></span>
      <% end %>
    <% else %>
      <span class="text-sm text-gray-400 dark:text-gray-500 italic">-</span>
    <% end %>
  </td>

  <%# Source indicator %>
  <td class="px-6 py-4 whitespace-nowrap">
    <% if element.source %>
      <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium
        <%= case element.source
            when 'calculated' then 'bg-blue-100 dark:bg-blue-900/50 text-blue-800 dark:text-blue-300'
            when 'from_settings' then 'bg-purple-100 dark:bg-purple-900/50 text-purple-800 dark:text-purple-300'
            when 'manual' then 'bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-300'
            else 'bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-400'
            end %>">
        <%= element.source.humanize %>
      </span>
      <% if element.overridden? %>
        <span class="ml-1 inline-flex items-center px-1.5 py-0.5 rounded text-xs font-medium bg-orange-100 dark:bg-orange-900/50 text-orange-800 dark:text-orange-300" title="Value was manually overridden">
          Override
        </span>
      <% end %>
    <% end %>
  </td>
</tr>
