<%# Section partial for survey review page %>
<%# locals: section (hash with :id, :title, :elements, :has_review_flags) %>

<div class="bg-white dark:bg-gray-800 shadow overflow-hidden sm:rounded-lg"
     data-survey-filter-target="section"
     data-section-id="<%= section[:id] %>">
  <%# Section header %>
  <div class="px-4 py-4 sm:px-6 bg-gray-50 dark:bg-gray-700 border-b border-gray-200 dark:border-gray-600">
    <div class="flex items-center justify-between">
      <div class="flex items-center space-x-3">
        <span class="text-sm font-mono text-gray-500 dark:text-gray-400"><%= section[:id] %></span>
        <h2 class="text-lg font-medium text-gray-900 dark:text-gray-100"><%= section[:title] %></h2>
      </div>
      <div class="flex items-center space-x-2">
        <% if section[:has_review_flags] %>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-100 dark:bg-yellow-900/50 text-yellow-800 dark:text-yellow-300">
            Review
          </span>
        <% end %>
        <span class="text-sm text-gray-500 dark:text-gray-400">
          <span data-survey-filter-target="sectionCount"><%= section[:elements].size %></span> elements
        </span>
      </div>
    </div>
  </div>

  <%# Elements table - sections without elements are filtered out in controller %>
  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
      <thead class="bg-gray-50 dark:bg-gray-700">
        <tr>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider w-32">Code</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Label</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider w-40">Value</th>
          <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider w-24">Source</th>
        </tr>
      </thead>
      <tbody class="bg-white dark:bg-gray-800 divide-y divide-gray-200 dark:divide-gray-700">
        <% section[:elements].each do |element| %>
          <%= render partial: "survey_reviews/element_row", locals: { element: element } %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
