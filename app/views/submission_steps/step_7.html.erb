<%= content_for :title, "Validate & Download - Step 7 of 7" %>

<div class="container mx-auto px-4 py-8">
  <%= render "submission_steps/progress", current_step: 7 %>

  <div class="max-w-4xl mx-auto">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">Validate & Download</h1>
    <p class="text-gray-600 dark:text-gray-300 mb-6">Review the validation results and download your XBRL submission file.</p>

    <%# Validation Results %>
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden mb-6 border border-gray-200 dark:border-gray-700">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200 dark:border-gray-700 flex justify-between items-center">
        <div>
          <h2 class="text-lg font-medium text-gray-900 dark:text-white">Validation Results</h2>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">XBRL validation against AMSF requirements</p>
        </div>
        <%= button_to "Re-validate", confirm_submission_submission_step_path(@submission, step: 7), method: :post, params: { action_type: "revalidate" }, class: "btn btn-secondary" %>
      </div>

      <div class="p-6">
        <% if @validation_result.nil? || @validation_result.errors.any? { |e| e[:code] == "SERVICE_ERROR" || e[:code] == "SYS001" } %>
          <div class="flex items-center text-yellow-600 dark:text-yellow-400">
            <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
            </svg>
            <span>Validation service unavailable. You can still download the file.</span>
          </div>
        <% elsif @validation_result.valid? %>
          <div class="flex items-center text-green-600 dark:text-green-400 mb-4">
            <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="font-medium">Validation passed successfully!</span>
          </div>

          <% if @validation_result.warnings.any? %>
            <div class="mt-4">
              <h3 class="text-sm font-medium text-yellow-800 dark:text-yellow-300 mb-2">Warnings (<%= @validation_result.warnings.count %>)</h3>
              <ul class="list-disc list-inside text-sm text-yellow-700 dark:text-yellow-400 space-y-1">
                <% @validation_result.warnings.each do |warning| %>
                  <li><strong><%= warning[:code] || warning["code"] %>:</strong> <%= warning[:message] || warning["message"] %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
        <% else %>
          <div class="flex items-center text-red-600 dark:text-red-400 mb-4">
            <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <span class="font-medium">Validation failed with errors</span>
          </div>

          <% if @validation_result.errors.any? %>
            <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-md p-4">
              <h3 class="text-sm font-medium text-red-800 dark:text-red-300 mb-2">Errors (<%= @validation_result.errors.count %>)</h3>
              <ul class="list-disc list-inside text-sm text-red-700 dark:text-red-400 space-y-1">
                <% @validation_result.errors.each do |error| %>
                  <li><strong><%= error[:code] || error["code"] %>:</strong> <%= error[:message] || error["message"] %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <%# Download Section %>
    <div class="bg-white dark:bg-gray-800 shadow rounded-lg overflow-hidden mb-6 border border-gray-200 dark:border-gray-700">
      <div class="px-4 py-5 sm:px-6 border-b border-gray-200 dark:border-gray-700">
        <h2 class="text-lg font-medium text-gray-900 dark:text-white">Download XBRL File</h2>
        <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Download the generated XBRL file for submission to AMSF</p>
      </div>

      <div class="p-6">
        <div class="flex items-center space-x-4">
          <% if @submission.validated? || @submission.completed? %>
            <%= link_to download_submission_path(@submission), class: "btn btn-primary" do %>
              <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
              Download Validated XBRL
            <% end %>
          <% else %>
            <%= link_to download_submission_path(@submission, unvalidated: true), class: "btn btn-secondary", data: { turbo_confirm: "This submission has not been validated. Are you sure you want to download it?" } do %>
              <svg class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
              Download (Unvalidated)
            <% end %>
            <span class="text-sm text-yellow-600 dark:text-yellow-400">Submission not yet validated</span>
          <% end %>
        </div>
      </div>
    </div>

    <%# Navigation %>
    <%= form_with model: @submission, url: submission_submission_step_path(@submission, step: 7), method: :patch, local: true do |f| %>
      <div class="flex justify-between">
        <%= f.submit "Back", name: "commit", value: "back", class: "btn btn-secondary" %>
        <div class="space-x-3">
          <% if @submission.validated? %>
            <%= f.submit "Complete Submission", name: "commit", value: "complete", class: "btn btn-primary", data: { turbo_confirm: "Are you sure you want to mark this submission as complete? This cannot be undone." } %>
          <% elsif @validation_result&.valid? && @submission.in_review? %>
            <%= button_to "Mark as Validated", confirm_submission_submission_step_path(@submission, step: 7), method: :post, class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
