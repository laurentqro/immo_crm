<% Current.meta_tags.set(title: "Transaction - #{@transaction.reference || l(@transaction.transaction_date)}") %>

<div class="px-4 sm:px-6 lg:px-8">
  <%# Header %>
  <div class="sm:flex sm:items-center sm:justify-between">
    <div>
      <div class="flex items-center">
        <%= link_to transactions_path, class: "text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300" do %>
          &larr; Back to Transactions
        <% end %>
      </div>
      <h1 class="mt-2 text-2xl font-bold leading-7 text-gray-900 dark:text-white sm:truncate sm:text-3xl sm:tracking-tight">
        <%= @transaction.reference.present? ? @transaction.reference : "Transaction" %>
      </h1>
      <div class="mt-1 flex flex-col sm:mt-0 sm:flex-row sm:flex-wrap sm:space-x-4">
        <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium ring-1 ring-inset mt-2
          <%= case @transaction.transaction_type
              when 'PURCHASE' then 'bg-green-50 text-green-700 ring-green-700/10 dark:bg-green-900/30 dark:text-green-300 dark:ring-green-400/30'
              when 'SALE' then 'bg-blue-50 text-blue-700 ring-blue-700/10 dark:bg-blue-900/30 dark:text-blue-300 dark:ring-blue-400/30'
              when 'RENTAL' then 'bg-purple-50 text-purple-700 ring-purple-700/10 dark:bg-purple-900/30 dark:text-purple-300 dark:ring-purple-400/30'
              end %>">
          <%= @transaction.transaction_type_label %>
        </span>
        <span class="mt-2 flex items-center text-sm text-gray-500 dark:text-gray-400">
          <%= l(@transaction.transaction_date, format: :long) %>
        </span>
        <% if @transaction.has_cash? %>
          <span class="inline-flex items-center rounded-full bg-amber-100 dark:bg-amber-900/30 px-2 py-1 text-xs font-medium text-amber-700 dark:text-amber-300 mt-2">
            Cash Payment
          </span>
        <% end %>
      </div>
    </div>
    <div class="mt-5 flex lg:ml-4 lg:mt-0">
      <%= link_to "Edit", edit_transaction_path(@transaction), class: "btn btn-secondary" %>
      <%= button_to "Delete Transaction", transaction_path(@transaction),
          method: :delete,
          form: { data: { turbo_confirm: "Are you sure you want to delete this transaction?" } },
          class: "ml-3 btn btn-danger" %>
    </div>
  </div>

  <%# Transaction Details %>
  <div class="mt-8 overflow-hidden bg-white dark:bg-gray-900 shadow sm:rounded-lg border border-gray-200 dark:border-gray-700">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-base font-semibold leading-6 text-gray-900 dark:text-white">Transaction Details</h3>
    </div>
    <div class="border-t border-gray-200 dark:border-gray-700">
      <dl>
        <div class="bg-gray-50 dark:bg-gray-800 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Client</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0">
            <%= link_to @transaction.client.name, @transaction.client, class: "text-blue-600 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300" %>
            <span class="ml-2 text-gray-500 dark:text-gray-400">(<%= @transaction.client.client_type_label %>)</span>
          </dd>
        </div>
        <div class="bg-white dark:bg-gray-900 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Transaction Date</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0"><%= l(@transaction.transaction_date, format: :long) %></dd>
        </div>
        <div class="bg-gray-50 dark:bg-gray-800 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Type</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0">
            <%= @transaction.transaction_type_label %>
            <% if @transaction.purchase? && @transaction.purchase_purpose.present? %>
              <span class="text-gray-500 dark:text-gray-400">(<%= @transaction.purchase_purpose_label %>)</span>
            <% end %>
          </dd>
        </div>
        <% if @transaction.reference.present? %>
          <div class="bg-white dark:bg-gray-900 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Reference</dt>
            <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0"><%= @transaction.reference %></dd>
          </div>
        <% end %>
        <div class="bg-gray-50 dark:bg-gray-800 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Transaction Value</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0">
            <% if @transaction.transaction_value.present? %>
              <%= number_to_currency(@transaction.transaction_value, unit: "€", precision: 2) %>
            <% else %>
              <span class="text-gray-400 dark:text-gray-500">Not specified</span>
            <% end %>
          </dd>
        </div>
        <% if @transaction.commission_amount.present? %>
          <div class="bg-white dark:bg-gray-900 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Commission</dt>
            <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0">
              <%= number_to_currency(@transaction.commission_amount, unit: "€", precision: 2) %>
            </dd>
          </div>
        <% end %>
        <div class="bg-gray-50 dark:bg-gray-800 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Property Country</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0"><%= @transaction.property_country || "—" %></dd>
        </div>
        <% if @transaction.agency_role.present? %>
          <div class="bg-white dark:bg-gray-900 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Agency Role</dt>
            <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0"><%= @transaction.agency_role_label %></dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>

  <%# Payment Information %>
  <div class="mt-8 overflow-hidden bg-white dark:bg-gray-900 shadow sm:rounded-lg border border-gray-200 dark:border-gray-700">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-base font-semibold leading-6 text-gray-900 dark:text-white">Payment Information</h3>
    </div>
    <div class="border-t border-gray-200 dark:border-gray-700">
      <dl>
        <div class="bg-gray-50 dark:bg-gray-800 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Payment Method</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0">
            <% if @transaction.payment_method.present? %>
              <%= @transaction.payment_method_label %>
            <% else %>
              <span class="text-gray-400 dark:text-gray-500">Not specified</span>
            <% end %>
          </dd>
        </div>
        <% if @transaction.has_cash? %>
          <div class="bg-white dark:bg-gray-900 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
            <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Cash Amount</dt>
            <dd class="mt-1 text-sm sm:col-span-2 sm:mt-0">
              <span class="text-amber-600 dark:text-amber-400 font-medium">
                <%= number_to_currency(@transaction.cash_amount, unit: "€", precision: 2) %>
              </span>
              <% if @transaction.cash_amount && @transaction.cash_amount >= 10_000 %>
                <span class="ml-2 inline-flex items-center rounded-full bg-amber-100 dark:bg-amber-900/30 px-2 py-1 text-xs font-medium text-amber-700 dark:text-amber-300">
                  Enhanced due diligence required
                </span>
              <% end %>
            </dd>
          </div>
        <% end %>
      </dl>
    </div>
  </div>

  <%# Notes %>
  <% if @transaction.notes.present? %>
    <div class="mt-8 overflow-hidden bg-white dark:bg-gray-900 shadow sm:rounded-lg border border-gray-200 dark:border-gray-700">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-base font-semibold leading-6 text-gray-900 dark:text-white">Notes</h3>
      </div>
      <div class="border-t border-gray-200 dark:border-gray-700 px-4 py-5 sm:px-6">
        <div class="text-sm text-gray-900 dark:text-white">
          <%= simple_format(@transaction.notes) %>
        </div>
      </div>
    </div>
  <% end %>

  <%# Related STR Reports %>
  <% if @transaction.str_reports.kept.any? %>
    <div class="mt-8 overflow-hidden bg-white dark:bg-gray-900 shadow sm:rounded-lg border border-gray-200 dark:border-gray-700">
      <div class="px-4 py-5 sm:px-6 flex items-center justify-between">
        <div>
          <h3 class="text-base font-semibold leading-6 text-gray-900 dark:text-white">Related STR Reports</h3>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Suspicious Transaction Reports linked to this transaction.</p>
        </div>
        <%= link_to "File STR", new_str_report_path(transaction_id: @transaction.id), class: "btn btn-primary btn-sm" %>
      </div>
      <div class="border-t border-gray-200 dark:border-gray-700">
        <ul role="list" class="divide-y divide-gray-200 dark:divide-gray-700 list-none">
          <% @transaction.str_reports.kept.recent.each do |str_report| %>
            <li class="px-4 py-4 sm:px-6">
              <div class="flex items-center justify-between">
                <div>
                  <p class="text-sm font-medium text-gray-900 dark:text-white">
                    <%= link_to str_report.reason_label, str_report, class: "hover:text-blue-600 dark:hover:text-blue-400" %>
                  </p>
                  <p class="text-sm text-gray-500 dark:text-gray-400"><%= l(str_report.report_date, format: :long) %></p>
                </div>
                <%= link_to "View", str_report, class: "text-sm text-blue-600 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300" %>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
</div>
