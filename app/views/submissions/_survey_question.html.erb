<%# Survey question display partial - two column layout: question | answer %>
<%# locals: question (required - Question object from gem), value (the calculated answer) %>
<div class="grid grid-cols-12 gap-4 py-3 border-b border-gray-100 dark:border-gray-700 last:border-b-0">
  <%# Question label and instructions (left column) %>
  <div class="col-span-9">
    <p class="text-sm text-gray-700 dark:text-gray-300">
      <span class="font-semibold text-gray-500 dark:text-gray-400"><%= question.number %>.</span>
      <%= question.label %>
    </p>
    <% if question.instructions.present? %>
      <p class="mt-1 ml-5 text-xs text-gray-500 dark:text-gray-400 italic">
        <%= question.instructions %>
      </p>
    <% end %>
    <span class="text-xs text-gray-400 dark:text-gray-500 font-mono ml-5">(<%= question.id %>)</span>
  </div>

  <%# Answer value (right column) %>
  <div class="col-span-3 text-right">
    <% if value.is_a?(String) && value.in?(%w[Oui Non]) %>
      <% if value == "Oui" %>
        <span class="inline-flex items-center text-green-600 dark:text-green-400 font-semibold">
          <svg class="h-4 w-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
          Oui
        </span>
      <% else %>
        <span class="inline-flex items-center text-gray-500 dark:text-gray-400 font-semibold">
          <svg class="h-4 w-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
          Non
        </span>
      <% end %>
    <% elsif value.blank? %>
      <span class="text-gray-400 dark:text-gray-500 italic text-sm">Non renseigné</span>
    <% elsif question.type == :monetary %>
      <span class="text-sm text-gray-900 dark:text-white font-semibold"><%= number_to_currency(value, unit: "€", format: "%n %u") %></span>
    <% else %>
      <span class="text-sm text-gray-900 dark:text-white font-semibold"><%= value %></span>
    <% end %>
  </div>
</div>
