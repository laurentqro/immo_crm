<%= content_for :title, "Review #{@submission.year} AMSF Submission" %>

<div class="container mx-auto px-4 py-8">
  <div class="mb-8">
    <h1 class="text-2xl font-bold text-gray-900 dark:text-white">
      Questionnaire AMSF <%= @submission.year %>
    </h1>
    <span class="text-sm text-gray-500 dark:text-gray-400"><%= @survey.completion_percentage %>% complété</span>

    <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
      Vérifiez vos données avant de soumettre à l'AMSF. Toutes les valeurs sont calculées ou pré-remplies à partir des données que vous avez renseignées au cours de l'année <%= @submission.year %>.
    </p>
  </div>

  <%= render "validation_errors" %>

  <% if !@survey.valid? %>
    <div class="mb-6 bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 rounded-lg p-4">
      <div class="flex">
        <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
        </svg>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800 dark:text-red-200">
            <%= pluralize(@survey.unanswered_questions.count, "question") %> attendent votre réponse avant de pouvoir soumettre votre déclaration:
          </h3>
          <ul class="mt-2 text-sm text-red-700 dark:text-red-300 list-disc list-inside">
            <% @survey.unanswered_questions.each do |question| %>
              <li><%= question.label %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-12">
    <% @survey.sections.each do |section| %>
      <div class="shadow-lg rounded-xl border border-gray-200 dark:border-gray-700 overflow-hidden">
        <%# Section header %>
        <div class="px-8 py-8 bg-gradient-to-r from-indigo-600 to-indigo-500 dark:from-indigo-700 dark:to-indigo-600">
          <h2 class="text-3xl font-bold text-white flex items-center">
            <span class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-white/20 text-white text-xl font-bold mr-4">
              <%= section.number %>
            </span>
            <%= section.title %>
          </h2>
        </div>

        <% section.subsections.each do |subsection| %>
          <%# Subsection header %>
          <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-700 bg-gray-100 dark:bg-gray-800">
            <h3 class="text-xl font-bold text-gray-900 dark:text-white">
              <span class="text-indigo-600 dark:text-indigo-400 mr-2"><%= section.number %>.<%= subsection.number %></span>
              <%= subsection.title %>
            </h3>
          </div>

          <% if subsection.instructions.present? %>
            <%# Subsection instructions %>
            <div class="mx-4 my-3 sm:mx-6 p-4 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800 rounded-lg">
              <div class="text-sm text-blue-700 dark:text-blue-300 prose prose-sm prose-blue dark:prose-invert max-w-none">
                <%= markdown(subsection.instructions) %>
              </div>
            </div>
          <% end %>

          <%# Questions in this subsection %>
          <div class="px-4 py-2 sm:px-6">
            <dl>
              <% subsection.questions.each do |question| %>
                <%= render "survey_question", question: question, value: @survey.answer(question.id) %>
              <% end %>
            </dl>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>

  <%# Actions %>
  <div class="mt-8 flex justify-between items-center">
    <div class="text-sm text-gray-500 dark:text-gray-400">
      <% if @survey.valid? %>
        <span class="inline-flex items-center text-green-600 dark:text-green-400">
          <svg class="h-5 w-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
          </svg>
          Les données sont valides et prêtes à être soumises
        </span>
      <% else %>
        <span class="inline-flex items-center text-red-600 dark:text-red-400">
          <svg class="h-5 w-5 mr-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
          Veuillez résoudre les erreurs de validation avant de soumettre
        </span>
      <% end %>
    </div>
    <div class="flex space-x-3">
      <%= link_to "Retour", submission_path(@submission), class: "btn btn-secondary" %>
      <%= button_to "Validate XBRL", validate_submission_path(@submission),
          method: :post,
          class: "btn btn-secondary",
          data: { turbo: false } %>
      <% if @survey.valid? %>
        <%= button_to "Valider et terminer", complete_submission_path(@submission), method: :post, class: "btn btn-primary" %>
      <% else %>
        <button disabled class="btn btn-primary opacity-50 cursor-not-allowed">Valider et terminer</button>
      <% end %>
    </div>
  </div>
</div>
