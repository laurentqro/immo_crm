<%= content_for :title, "Submissions" %>

<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">Submissions</h1>
    <%= link_to "New Submission", new_submission_path, class: "btn btn-primary" %>
  </div>

  <turbo-frame id="submissions_list">
    <% if @submissions.any? %>
      <div class="bg-white shadow overflow-hidden sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Year</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Started</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @submissions.each do |submission| %>
              <tr>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= link_to submission.year, submission_path(submission), class: "text-blue-600 hover:text-blue-900" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full <%= submission.status_badge_class %>">
                    <%= submission.status_label %>
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  <%= submission.started_at&.strftime("%B %d, %Y") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium space-x-2">
                  <%= link_to "View", submission_path(submission), class: "text-blue-600 hover:text-blue-900" %>
                  <% if submission.draft? %>
                    <%= link_to "Continue", submission_review_path(submission), class: "text-green-600 hover:text-green-900" %>
                  <% end %>
                  <% if submission.validated? || submission.completed? %>
                    <%= link_to "Download", download_submission_path(submission), class: "text-purple-600 hover:text-purple-900" %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-12 bg-white rounded-lg shadow">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No submissions</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating a new annual submission.</p>
        <div class="mt-6">
          <%= link_to "New Submission", new_submission_path, class: "btn btn-primary" %>
        </div>
      </div>
    <% end %>
  </turbo-frame>
</div>
