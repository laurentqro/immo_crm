<% Current.meta_tags.set(title: "Organization Setup - Entity Information") %>

<div class="min-h-screen bg-gray-50 flex flex-col justify-center py-12 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md">
    <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
      Complete your organization setup
    </h2>
    <p class="mt-2 text-center text-sm text-gray-600">
      Step 1 of 2: Entity Information
    </p>
  </div>

  <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10" data-controller="onboarding">
      <%= form_with model: @organization, url: entity_info_onboarding_index_path, method: :post, local: true do |form| %>
        <%= render "application/error_messages", resource: @organization %>

        <div class="space-y-6">
          <h3 class="text-lg font-medium text-gray-900">Entity Information</h3>

          <div>
            <%= form.label :name, "Company name", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.text_field :name,
                  required: true,
                  class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                  placeholder: "Monaco Real Estate Agency" %>
            </div>
          </div>

          <div>
            <%= form.label :rci_number, "RCI number", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.text_field :rci_number,
                  required: true,
                  class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                  placeholder: "RCI12345" %>
            </div>
            <p class="mt-1 text-xs text-gray-500">Your Monaco Registre du Commerce et d'Industrie number</p>
          </div>

          <div>
            <%= form.label :country, "Country", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= form.select :country,
                  options_for_select([
                    ["Monaco", "MC"],
                    ["France", "FR"],
                    ["Italy", "IT"],
                    ["Other", ""]
                  ], @organization.country || "MC"),
                  {},
                  class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
            </div>
          </div>

          <hr class="my-6">

          <h3 class="text-lg font-medium text-gray-900">Staff Information</h3>

          <div class="grid grid-cols-2 gap-4">
            <div>
              <%= label_tag "settings_total_employees", "Total employees", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= number_field_tag "settings[total_employees]",
                    @settings&.dig(:total_employees) || session.dig(:onboarding, :settings, "total_employees"),
                    min: 1,
                    class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
              </div>
            </div>

            <div>
              <%= label_tag "settings_compliance_officers", "Compliance officers", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1">
                <%= number_field_tag "settings[compliance_officers]",
                    @settings&.dig(:compliance_officers) || session.dig(:onboarding, :settings, "compliance_officers"),
                    min: 0,
                    class: "appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
              </div>
            </div>
          </div>
        </div>

        <div class="mt-8">
          <%= form.submit "Continue",
              class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500",
              data: { onboarding_target: "submit" } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
