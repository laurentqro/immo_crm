<% Current.meta_tags.set(title: "STR Report - #{@str_report.reason_label}") %>

<div class="px-4 sm:px-6 lg:px-8">
  <%# Header %>
  <div class="sm:flex sm:items-center sm:justify-between">
    <div>
      <div class="flex items-center">
        <%= link_to str_reports_path, class: "text-sm text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300" do %>
          &larr; Back to STR Reports
        <% end %>
      </div>
      <h1 class="mt-2 text-2xl font-bold leading-7 text-gray-900 dark:text-white sm:truncate sm:text-3xl sm:tracking-tight">
        STR Report
      </h1>
      <div class="mt-1 flex flex-col sm:mt-0 sm:flex-row sm:flex-wrap sm:space-x-4">
        <span class="inline-flex items-center rounded-md px-2 py-1 text-xs font-medium ring-1 ring-inset mt-2
          <%= case @str_report.reason
              when 'CASH' then 'bg-amber-50 text-amber-700 ring-amber-700/10 dark:bg-amber-900/30 dark:text-amber-300 dark:ring-amber-400/30'
              when 'PEP' then 'bg-red-50 text-red-700 ring-red-700/10 dark:bg-red-900/30 dark:text-red-300 dark:ring-red-400/30'
              when 'UNUSUAL_PATTERN' then 'bg-purple-50 text-purple-700 ring-purple-700/10 dark:bg-purple-900/30 dark:text-purple-300 dark:ring-purple-400/30'
              else 'bg-gray-50 text-gray-600 ring-gray-500/10 dark:bg-gray-700 dark:text-gray-300 dark:ring-gray-400/30'
              end %>">
          <%= @str_report.reason_label %>
        </span>
        <span class="mt-2 flex items-center text-sm text-gray-500 dark:text-gray-400">
          Filed <%= l(@str_report.report_date, format: :long) %>
        </span>
      </div>
    </div>
    <div class="mt-5 flex lg:ml-4 lg:mt-0">
      <%= link_to "Edit", edit_str_report_path(@str_report), class: "btn btn-secondary" %>
      <%= button_to "Delete Report", str_report_path(@str_report),
          method: :delete,
          form: { data: { turbo_confirm: "Are you sure you want to delete this STR report?" } },
          class: "ml-3 btn btn-danger" %>
    </div>
  </div>

  <%# Report Details %>
  <div class="mt-8 overflow-hidden bg-white dark:bg-gray-900 shadow sm:rounded-lg border border-gray-200 dark:border-gray-700">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-base font-semibold leading-6 text-gray-900 dark:text-white">Report Details</h3>
    </div>
    <div class="border-t border-gray-200 dark:border-gray-700">
      <dl>
        <div class="bg-gray-50 dark:bg-gray-800 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Report Date</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0"><%= l(@str_report.report_date, format: :long) %></dd>
        </div>
        <div class="bg-white dark:bg-gray-900 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Reason</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0"><%= @str_report.reason_label %></dd>
        </div>
        <div class="bg-gray-50 dark:bg-gray-800 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Related Client</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0">
            <% if @str_report.client.present? %>
              <%= link_to @str_report.client.name, @str_report.client, class: "text-blue-600 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300" %>
              <span class="ml-2 text-gray-500 dark:text-gray-400">(<%= @str_report.client.client_type_label %>)</span>
            <% else %>
              <span class="text-gray-400 dark:text-gray-500">No client linked</span>
            <% end %>
          </dd>
        </div>
        <div class="bg-white dark:bg-gray-900 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Related Transaction</dt>
          <dd class="mt-1 text-sm text-gray-900 dark:text-white sm:col-span-2 sm:mt-0">
            <% if @str_report.linked_transaction.present? %>
              <%= link_to @str_report.linked_transaction.reference || l(@str_report.linked_transaction.transaction_date), @str_report.linked_transaction, class: "text-blue-600 hover:text-blue-900 dark:text-blue-400 dark:hover:text-blue-300" %>
              <span class="ml-2 text-gray-500 dark:text-gray-400">(<%= @str_report.linked_transaction.transaction_type_label %>)</span>
            <% else %>
              <span class="text-gray-400 dark:text-gray-500">No transaction linked</span>
            <% end %>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <%# Notes Section %>
  <% if @str_report.notes.present? %>
    <div class="mt-8 overflow-hidden bg-white dark:bg-gray-900 shadow sm:rounded-lg border border-gray-200 dark:border-gray-700">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-base font-semibold leading-6 text-gray-900 dark:text-white">Details & Notes</h3>
      </div>
      <div class="border-t border-gray-200 dark:border-gray-700 px-4 py-5 sm:px-6">
        <div class="text-sm text-gray-900 dark:text-white">
          <%= simple_format(@str_report.notes) %>
        </div>
      </div>
    </div>
  <% end %>

  <%# Compliance Notice %>
  <div class="mt-8 rounded-md bg-blue-50 dark:bg-blue-900/30 p-4 border border-blue-200 dark:border-blue-800">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a.75.75 0 000 1.5h.253a.25.25 0 01.244.304l-.459 2.066A1.75 1.75 0 0010.747 15H11a.75.75 0 000-1.5h-.253a.25.25 0 01-.244-.304l.459-2.066A1.75 1.75 0 009.253 9H9z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3">
        <h3 class="text-sm font-medium text-blue-800 dark:text-blue-300">Compliance Information</h3>
        <div class="mt-2 text-sm text-blue-700 dark:text-blue-400">
          <p>This STR report will be included in the annual AMSF declaration. Records are retained for 5 years as required by Monaco AML/CFT regulations.</p>
        </div>
      </div>
    </div>
  </div>
</div>
